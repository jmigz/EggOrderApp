<%- include('./partials/header.ejs') -%>

<div class="container">
  <h1>Edit Order</h1>
  <div class="card">
    <div class="card-body">
      <form id="edit-form" action="/edit/<%= order.id %>" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="mb-3">
          <label for="name" class="form-label">Name:</label>
          <input type="text" id="name" name="name" class="form-control" value="<%= order.name %>" required>
        </div>

        <div class="mb-3">
          <label for="dept" class="form-label">Department:</label>
          <input type="text" id="dept" name="dept" class="form-control" value="<%= order.dept %>" required>
        </div>

        <div class="mb-3">
          <label for="quantity" class="form-label">Quantity:</label>
          <input type="number" id="quantity" name="quantity" class="form-control" value="<%= order.quantity %>" required>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price:</label>
          <input type="number" id="price" name="price" class="form-control" step="0.01" value="<%= order.price %>" required>
        </div>

        <div class="mb-3 form-check">
          <input type="hidden" id="delivered-hidden" name="delivered" value="<%= order.delivered ? 'true' : 'false' %>">
          <input type="checkbox" id="delivered" class="form-check-input">
          <label for="delivered" class="form-check-label">Delivered</label>
        </div>

        <div class="mb-3 form-check">
          <input type="hidden" id="paid-hidden" name="paid" value="<%= order.paid ? 'true' : 'false' %>">
          <input type="checkbox" id="paid" class="form-check-input">
          <label for="paid" class="form-check-label">Paid</label>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>

<script>
  window.onload = function() {
    var deliveredCheckbox = document.getElementById('delivered');
    var paidCheckbox = document.getElementById('paid');
    var deliveredHiddenInput = document.getElementById('delivered-hidden');
    var paidHiddenInput = document.getElementById('paid-hidden');

    deliveredCheckbox.checked = (deliveredHiddenInput.value === 'true');
    paidCheckbox.checked = (paidHiddenInput.value === 'true');

    deliveredCheckbox.addEventListener('change', function() {
      deliveredHiddenInput.value = this.checked ? 'true' : 'false';
    });

    paidCheckbox.addEventListener('change', function() {
      paidHiddenInput.value = this.checked ? 'true' : 'false';
    });
  };
</script>

<%- include('./partials/footer.ejs') -%>
